{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<div class="container">
    <h1>Reservation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateStart</th>
                <th>DateEnd</th>
                <th>User</th>
                <th>Room</th>
                <th>Length</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.DateStart ? reservation.DateStart|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.DateEnd ? reservation.DateEnd|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.user }}</td>
                <td>{{ reservation.room }}</td>
                <td>{{ reservation.length }} days</td>
                <td>&euro; {{ reservation.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
</div>
{% endblock %}
