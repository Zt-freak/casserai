{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form action="{{ path('room_check') }}" method="post">
        <input type="date" name="BeginDate">
        <input type="date" name="EndDate">
        <input type="submit" name="submit">
    </form>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('room_new') }}">Create new</a>
    {% else %}
    <a href="{{ path('room_new') }}">You are not logged in as an admin, but you can create a new room anyways.</a>
    {% endif %}
{% endblock %}
